    <section id="contact" class="about bg-soft">
      <div class="container">
        <div class="row">
            <div class="box">
                <div class="col-lg-10 col-lg-offset-1 text-center">
                    <hr>
                    <h2 class="intro-text text-center">Contact
                        form
                    </h2>
                    <hr>
                    <p>Please use the following form to submit any questions or concerns</p>
                    <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
                      <div class="row">
                        <div class="col-lg-6">
                          Name
                          <%= f.input :name, :required => true, label: '', input_html: { class: 'form-control' } %>
                        </div>
                        <div class="col-lg-6">
                          Email Address
                          <%= f.input :email, :required => true, label: '', input_html: { class: 'form-control' } %>
                        </div>
                        <div class="clearfix"></div>
                        <br>
                        <div class="col-lg-12">
                          Message
                            <%= f.input :message, :as => :text, :required => true, label: '', input_html: { class: 'form-control' } %>
                        </div>
                        <div class= "hidden">
                          <%= f.input :nickname, :hint => 'Leave this field blank!' %>
                        </div>
                        <div class="col-lg-12">
                          </br>
                          <%= f.button :submit, 'Send message', :class=> "btn btn-primary" %>
                        </div>
                      </div>
                    <% end %>
                    </form>
                </div>
            </div>
        </div>
